defmodule Choice do
    def main do
     player()
     robot()
    end
    
    def player do
      answer = IO.gets("What do you wanna play between : rock,paper or scissor ?") |> String.trim
      IO.puts "#{answer}"
    end
    
    def robot do
      list = ["rock", "paper", "scissor"]   
      answerb = Enum.random(list)
      IO.puts "Bot plays #{answerb} !"
    end
end


  # compare
